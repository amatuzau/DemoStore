{
  "ConnectionStrings": {
    "StoreConnection": "Server=(localdb)\\mssqllocaldb;Database=Store;Trusted_Connection=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "IdentityServer": {
    "Clients": {
      "Store.App": {
        "Profile": "IdentityServerSPA",
        "RedirectUri": "/ClientApp/authentication/login-callback",
        "AccessTokenLifetime": 3600
      }
    }
  },
  "AllowedHosts": "*"
}
